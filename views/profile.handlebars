<section class="tile is-ancestor">

  <!-- this is the image and rendered profile section -->
  <section class="tile is-parent is-vertical is-5">
    <section
      class="tile is-child is-vertical has-text-centered has-text-link-dark px-5 px-5 is-size-5 has-text-weight-bold">
      <br>
      <div>

        {{#unless thisProfile.image.multimedia_url }}
        <img src="/Assets/profile-photo-placeholder.png" />
        {{/unless}}

        <img src="{{thisProfile.image.multimedia_url}}" />


      </div>
      <section class="has-text-centered">
        <form id="profilePicture">
          <input id="picture" type="file" name="image" />
          <button type="submit">Upload</button>
        </form>
      </section>
      <br>
      <section class="container">
        <p class="title profile-name has-text-link-dark is-1 has-text-weight-bold">{{thisProfile.profile.name}}</p>
        <p><span class="has-text-link-light has-text-weight-semibold">I am a:</span> {{thisProfile.profile.animal_type}}
        </p>
        <p><span class="has-text-link-light has-text-weight-semibold">My age:</span> {{thisProfile.profile.age}}</p>
        <p><span class="has-text-link-light has-text-weight-semibold">My breed/mix:</span>
          {{thisProfile.profile.breed_mix}}</p>
        <p><span class="has-text-link-light has-text-weight-semibold">My personality quirks:</span>
          {{thisProfile.profile.personality_quirks}}</p>
        {{#if thisProfile.profile.dog}}
        <p> I get along with dogs.</p>
        {{else}}
        <p>Sorry, I don't get along with dogs.</p>
        {{/if}}
        {{#if thisProfile.profile.cat}}
        <p>I get along with cats</p>
        {{else}}
        <p>Sorry, I don't get along with cats.</p>
        {{/if}}
        {{#if thisProfile.profile.kids}}
        <p>I get along with kids.</p>
        {{else}}
        <p> Sorry, I don't get along with kids.</p>
        {{/if}}
        <p><span class="has-text-link-light has-text-weight-semibold">My furrever friends/family members are
            called:</span><br> {{thisProfile.profile.furry_family}}</p>
        <p><span class="has-text-link-light has-text-weight-semibold">Email address:</span> <a
            href="mailto:{{thisProfile.profile.email}}">{{thisProfile.profile.email}}</a></p>
        <p><span class="has-text-link-light has-text-weight-semibold">Fostered since:</span> {{format_date
          thisProfile.profile.date_fostered}}</p>
        {{#if thisProfile.profile.neutered_spayed}}
        <p>I am neutered/spayed.</p>
        {{else}}
        <p>Sorry, I'm not neutered/spayed.</p>
        {{/if}}
        {{#if thisProfile.profile.vaxed}}
        <p>I am vaccinated.</p>
        {{else}}
        <p> Sorry, I'm not vaccinated.</p>
        {{/if}}
        <p><span class="has-text-link-light has-text-weight-semibold">My diet:</span> {{thisProfile.profile.diet}}</p>
        <p><span class="has-text-link-light has-text-weight-semibold">I love to:</span> {{thisProfile.profile.i_love}}
        </p>
        <p><span class="has-text-link-light has-text-weight-semibold">Which shelter told you about me?<br> Shelter
            URL:</span> <a href="{{thisProfile.profile.adopt_me_url}}">{{thisProfile.profile.adopt_me_url}}</a></p>
      </section>
    </section>
  </section>

  <!-- this is the feed display area -->
  <section class="tile is-parent is-vertical is-5 has-text-centered">
    <section class="tile is-child is-vertical">
      <!-- this is where the main feeds are! -->
      <div class="pt-6 has-text-weight-semibold has-text-centered">
        <button class="button is-large has-background-warning-light" id="picBtn"><span class="icon">
            <i class="fa-solid fa-image"></i>
          </span></button>
        <p class="has-text-weight-bold has-text-grey-darker is-size-4">Upload Photo</p>

        <form class="is-hidden" id="photo">
          <label for="new_feed" class="label is-medium"></label>
          <input id="feedpic" type="file" name="image">
          <input id="photoCaption" type="text" placeholder="Caption your photo!" name="caption" style="width:40%">
          <br>
          <br>
          <button id="create_feed" type="submit">Submit</button>
          <br><br>

        </form>
      </div>
      <br>
      <div class="has-text-weight-semibold has-text-centered">
        <button class="button is-large has-background-success-light" id='textBtn'><span class="icon">
            <i class="fa-regular fa-keyboard"></i>
          </span></button>
        <p class="has-text-weight-bold has-text-grey-darker is-size-4">How are you?</p>

        <form class="is-hidden" id="textPost">
          <input id="feedText" type="text" name="caption" style="width:50%">
          <br>
          <br>
          <button type="submit">Submit</button>
        </form>
      </div>



      <section class="has-text-centered has-text-white py-6 is-size-2 has-text-weight-semibold">
        <br><br>

        {{#if thisProfile.posts.length}}
        {{#each thisProfile.posts as |posts|}}
        {{>post-details}}
        {{/each}}
        {{else}}
        <div></div>
        {{/if}}

      </section>
    </section>
  </section>

</section>

<script src="/js/test_profile2.js"></script>