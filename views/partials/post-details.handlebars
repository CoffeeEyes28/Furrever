<section class="has-text-white py-2 px-2">
    
   
    <div class="postFeed">
     
    {{#if media}}
    <div class="box">
    <img src="{{media}}"/>
    <p>{{caption}}</p>
    <button id="deleteBtn" data-id="{{id}}"><span class="icon"><i class="fa-solid fa-trash"></i></span></button>
   
    </div>
    {{else}}
    <div class="box py-4">
    <p>{{caption}}</p>
    <button id="deleteBtn" data-id="{{id}}"><span class="icon"><i class="fa-solid fa-trash"></i></span></button>
    </div>
    {{/if}}
   
    </div>
</section>


