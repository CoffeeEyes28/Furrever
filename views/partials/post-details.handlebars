<section class="has-text-white py-2 px-2">
    
   
    <div class="postFeed">
     
    {{#if media}}
    <div class="card py-3 has-background-warning-light">
        <div class="card-image">
    <img src="{{media}}"/>
    </div>
    <div class="content">
    <p>{{caption}}</p>
    </div>
    <button><i class="fa-solid fa-trash deleteBtn" data-id="{{id}}" ></i></button>
   
    </div>
    {{else}}
    <div class="box py-3 has-background-success-light">
    <p>{{caption}}</p>
    <button><i class="fa-solid fa-trash deleteBtn"  data-id="{{id}}"></i></button>
    </div>
    {{/if}}
   
    </div>
</section>


