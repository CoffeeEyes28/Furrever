<section class="has-text-white py-2 px-2">
    
   
    <div class="postFeed">
     
    {{#if media}}
    <div class="card ">
        <div class="card-image">
    <img src="{{media}}"/>
    </div>
    <div class="content">
    <p>{{caption}}</p>
    </div>
    <button class="deleteBtn" data-id="{{id}}"><i class="fa-solid fa-trash"></i></button>
   
    </div>
    {{else}}
    <div class="box py-4">
    <p>{{caption}}</p>
    <button id="deleteBtn" data-id="{{id}}"><i class="fa-solid fa-trash"></i></button>
    </div>
    {{/if}}
   
    </div>
</section>


